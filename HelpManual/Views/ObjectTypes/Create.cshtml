@model HelpManual.Models.ObjectTypeViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>ObjectType</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" id="dataSect">
                <label asp-for="Data" class="control-label"></label>
                <textarea asp-for="Data"></textarea>
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            @*<div class="form-group" id="dataSect">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>*@
            <div class="form-group hidden" id="imageSect">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group hidden" id="optionsSect">
                <label asp-for="Options" class="control-label"></label>
                <input asp-for="Options" class="form-control" />
                <span asp-validation-for="Options" class="text-danger"></span>
            </div>
            <div class="form-group hidden" id="startEndSect">
                <label asp-for="StartEnd" class="control-label"></label>
                <input asp-for="StartEnd" class="form-control" />
                <span asp-validation-for="StartEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ControlTypeId" class="control-label"></label>
                <select asp-for="ControlTypeId" class ="form-control" asp-items="ViewBag.ControlTypeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
